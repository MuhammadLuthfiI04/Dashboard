<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
    <link href="https://cdn.datatables.net/1.13.4/css/jquery.dataTables.min.css" rel="stylesheet">
    <script src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/css/style.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="UserAccount" asp-action="ListUserAccount">Application</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="UserAccount" asp-action="ListUserAccount">User Account</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Product" asp-action="ListProduct">Product</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            <table>
                <tr class="">
                    <td>
                        <div id="date-time"></div>
                    </td>
                    <td>
                        <h1 id="date-times"></h1>
                    </td>
                </tr>
            </table>
            <div >
            </div>

            @RenderBody()
        </main>
    </div>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
<script>
    function updateDateTime() {
        const currentDate = new Date();
        const options = {
            timeZone: 'Asia/Jakarta',
            weekday: 'long', 
            year: 'numeric', 
            month: 'long', 
            day: 'numeric', 
        };
        const options1 = {
            hour: '2-digit',
            minute: '2-digit',
            second: '2-digit'
        }
        const formattedDate = currentDate.toLocaleString('id-ID', options);
        document.getElementById('date-time').innerText = formattedDate;

        const formattedDate1 = currentDate.toLocaleString('id-ID', options1);
        document.getElementById('date-times').innerText = formattedDate1;
    }
    updateDateTime();

    setInterval(updateDateTime, 1000);
    //$(document).ready(function () {
    //    $('#example').DataTable();
    //})
</script>
